{
  "name": "xpm",
  "version": "0.6.0",
  "description": "The xPack package manager command line tool",
  "main": "./index.js",
  "directories": {
    "bin": "./bin",
    "lib": "./lib",
    "test": "./test"
  },
  "bin": {
    "xpm": "./bin/xpm.js"
  },
  "scripts": {
    "prepublishOnly": "standard && npm run test-tap -s",
    "test": "standard && npm run test-tap -s",
    "test-coverage": "tap --coverage --reporter=classic --timeout 600 --no-color \"test/tap/*.js\"",
    "test-tap": "tap --reporter=classic --timeout 300 --no-color \"test/tap/*.js\"",
    "tap": "tap --reporter=spec --timeout 300 --no-color",
    "fix": "standard --fix",
    "link": "npm link @ilg/cli-start-options; npm link @xpack/es6-promisifier",
    "git-log": "git log --pretty='%cd * %h %s' --date=short"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpack/xpm-js.git"
  },
  "keywords": [
    "xpack",
    "package",
    "manager",
    "npm"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul"
  },
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/xpm-js/issues"
  },
  "homepage": "https://github.com/xpack/xpm-js",
  "dependencies": {
    "@ilg/cli-start-options": "^0.7.0",
    "@xpack/es6-promisifier": "^1.0.0",
    "@xpack/logger": "^2.2.1",
    "arch": "^2.1.1",
    "cacache": "^13.0.1",
    "cp-file": "^7.0.0",
    "decompress": "^4.2.0",
    "del": "^5.1.0",
    "is-windows": "^1.0.2",
    "liquidjs": "^9.3.1",
    "make-dir": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mkdirp-promise": "^5.0.1",
    "mz": "^2.7.0",
    "pacote": "^10.1.2",
    "parse-git-config": "^3.0.0",
    "request": "^2.88.0",
    "rimraf": "^3.0.0",
    "semver": "^6.3.0",
    "tar": "^5.0.5",
    "user-home": "^2.0.0"
  },
  "devDependencies": {
    "standard": "^14.3.1",
    "tap": "^14.9.2"
  },
  "peerDependencies": {},
  "bundledDependencies": [],
  "optionalDependencies": {},
  "engines": {
    "node": ">7.7.0"
  }
}
